{% extends 'IhsanSimpleCrudBundle::layout.html.twig' %}

{% block breadcrumb %}
    <li><a href="#" class="active">{{ page_title }}</a></li>
{% endblock %}

{% block page_title %}
    {{ page_title }}
{% endblock %}

{% block page_description %}
    {{ page_description }}
{% endblock %}

{% block menu %}
    {{ knp_menu_render(menu, { currentClass: 'active' }) }}
{% endblock %}

{% block content %}
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="box box-success box-solid">
            <div class="box-header">
                <form role="form">
                    <div class="input-group">
                        <input type="text" name="filter" class="form-control" placeholder="{{ 'action.search' | trans({}, 'IhsanSimpleCrudBundle') }}">
                        <span class="input-group-btn">
                            <button class="btn btn-warning" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </form>
            </div>
            <div class="box-body with-border table-responsive padding-7">
                <table class="table table-hover table-bordered">
                    <tr>
                        <td>#</td>
                        {% for i, value in header %}
                            <td>{{ value | humanize}}</td>
                        {% endfor %}
                    </tr>
                    {% for key, value in record %}
                        <tr>
                            <td>{{ key + 1 }}</td>
                            {% for i, v in value %}
                                <td>{{ v }}</td>
                            {% endfor %}
                            <td width="23%">
                                <button class="btn btn-labeled btn-success">
                                    <span class="btn-label"><i class="fa fa-share"></i></span>{{ 'action.show' | trans({}, 'IhsanSimpleCrudBundle') }}
                                </button>
                                <button class="btn btn-labeled btn-warning">
                                    <span class="btn-label"><i class="fa fa-pencil"></i></span>{{ 'action.edit' | trans({}, 'IhsanSimpleCrudBundle') }}
                                </button>
                                <button class="delete btn btn-labeled btn-danger">
                                    <span class="btn-label"><i class="fa fa-trash"></i></span>{{ 'action.delete' | trans({}, 'IhsanSimpleCrudBundle') }}
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
                <div class="padding-top-7">
                    <div class="pull-left">
                        <a href = "#" class="btn btn-primary add-new">{{ 'action.add' | trans({}, 'IhsanSimpleCrudBundle') }}</a>
                    </div>
                    <div class="pull-right">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('.add-new').on('click', function () {
                var url = document.URL.replace('list', 'new');
                window.location = url;
            });
        });
    </script>
{% endblock %}
